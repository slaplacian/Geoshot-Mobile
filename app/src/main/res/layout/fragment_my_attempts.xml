<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.myAttempts.MyAttemptsFragment">

    <TextView
        android:id="@+id/welcomeMyAttempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingBottom="0dp"
        android:paddingTop="15dp"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:text="Aqui estão suas tentativas" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myAttemptsRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_below="@id/welcomeMyAttempts"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/noMyAttempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingBottom="0dp"
        android:paddingTop="15dp"
        android:textSize="24dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_below="@id/myAttemptsRecyclerView"
        android:text="Você não possui nenhuma tentativa" />

</RelativeLayout>
