<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.myAttempts.MyAttemptsFragment">

    <TextView
        android:id="@+id/geoshot_name_feed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Geoshot"
        android:textColor="#64AFA6"
        android:padding="3dp"
        android:textSize="25sp"
        android:gravity="center"
        android:fontFamily="@font/dovens" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myAttemptsRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_below="@id/geoshot_name_feed" />

    <TextView
        android:id="@+id/noMyAttempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingTop="3dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_below="@id/myAttemptsRecyclerView"
        android:text="Você não possui nenhuma tentativa" />

</RelativeLayout>
